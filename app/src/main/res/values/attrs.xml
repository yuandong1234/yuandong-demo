<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义控件 轮播显示控件 -->
    <declare-styleable name="CustomPicRollingDisplayView">
        <attr name="defaultPicSrc" format="reference" />
        <attr name="timeGap" format="integer" />
    </declare-styleable>

    <!-- 自定义控件 轮播显示位置只是控件 -->
    <declare-styleable name="CustomPicRollingPositionIndicatorView">
        <attr name="selectedSrc" format="reference" />//选中状态图片
        <attr name="defaultSrc" format="reference" />//未选中状态图片
        <attr name="gap" format="dimension" />//图片间的间隙
        <attr name="indicatorWidth" format="dimension" />
        <attr name="indicatorHeight" format="dimension" />
    </declare-styleable>


    <!-- 自定义控件 上图片下文字带气泡控件 -->
    <declare-styleable name="CustomImageTextBubbleView">
        <attr name="bubbleNum" format="integer" />//气泡的数字
        <attr name="srcPicUnselected" format="reference" />//未选中状态图片
        <attr name="srcPicSelected" format="reference" />//选中状态图片
        <attr name="textContent" format="string" />//文字内容
        <attr name="textColorUnselected" format="color" />//未选中状态文字颜色
        <attr name="textColorSelected" format="color" />//选中状态文字颜色
        <attr name="textSize" format="dimension" />//文字size
        <attr name="tabSelected" format="boolean" />//是否为选中状态
    </declare-styleable>


    <!--图书比价扫一扫-->
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <!-- 自定义圆形ImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>



    <!--自定义广告bannerview-->
    <declare-styleable name="CircleFlowIndicator">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="centered" format="boolean" />
        <attr name="fadeOut" format="integer" />
        <attr name="inactiveType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="activeType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="circleSeparation" format="dimension" />
        <attr name="activeRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ViewFlow">
        <attr name="sidebuffer" format="integer" />
    </declare-styleable>

</resources>
